<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title != "undefined" ? title : "Cooking blog with Node.js" %>
    </title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;500&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header class="navbar-light navbar-sticky header-static">
      <!-- Logo Nav START -->
      <nav class="navbar navbar-expand-xl">
        <div class="container-fluid px-3 px-xl-5">
          <!-- Logo START -->
          <a class="navbar-brand" href="/">
            <img src="/img/logo.svg" alt="logo" width="229" height="68" />
          </a>
          <!-- Logo END -->

          <!-- Main navbar START -->
          <div
            class="navbar-collapse w-100 collapse main-navbar"
            id="navbarCollapse"
          >
            <!-- Nav Main menu START -->
            <ul class="navbar-nav navbar-nav-scroll me-auto main-navbar1">
              <!-- Nav item 1 Demos -->
              <li class="nav-item dropdown">
                <a class="nav-link" href="/" id="demoMenu">Home</a>
              </li>

              <!-- Nav item 2 Pages -->
              <li class="nav-item dropdown">
                <a class="nav-link" href="/about" id="demoMenu">About</a>
              </li>

              <!-- Nav item 3 Account -->
              <li class="nav-item dropdown">
                <a class="nav-link" href="/submit" id="demoMenu">Submit</a>
              </li>

              <!-- Nav item 4 Megamenu-->
              <li class="nav-item dropdown">
                <a class="nav-link" href="/contact" id="demoMenu">Contact</a>
              </li>
            </ul>
            <!-- Nav Main menu END -->

            <!-- Nav Search START -->
            <div
              class="nav my-3 my-xl-0 px-4 flex-nowrap align-items-center search1"
            >
              <div class="nav-item w-100">
                <form class="position-relative">
                  <input
                    class="form-control pe-5 bg-transparent"
                    type="search"
                    placeholder="Search"
                  />
                </form>
              </div>
            </div>
            <!-- Nav Search END -->
          </div>
          <!-- Main navbar END -->
        </div>
      </nav>
      <!-- Logo Nav END -->
    </header>
    <%- body -%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
